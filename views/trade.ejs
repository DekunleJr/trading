<%- include('includes/head.ejs') %>

<body>
  <%- include('includes/nav.ejs') %>
  <main class="main" id="top">
    <div class="preloader" id="preloader">
      <div class="loader">
        <div class="line-scale">
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>
    </div>
    <div class="container mt-8">
      <h2 class="text-center">Trade Dashboard</h2>

      <!-- Investment Summary -->
      <div class="card bg-primary p-3 mt-3">
        <h4 class="text-white">
          Total Investment: $<%= user.investmentAmount.toFixed(2) %>
        </h4>
        <h4 class="text-white">
          Expected Payout: $<%= (user.investmentAmount * 1.5).toFixed(2) %>
        </h4>
        <h4 class="text-white">Payout Date: <%= user.payoutDate %></h4>
      </div>
      <div class="row gap-3 mb-3 mt-3">
        <!-- Deposit Section -->
        <div
          class="card bg-primary p-3 mt-3 col-12 col-md-6 col-lg-6 dwc"
          style="height: 300px"
        >
          <h4 class="text-white">Deposit Funds</h4>
          <form action="/deposit" method="POST">
            <input
              type="number"
              name="amount"
              class="form-control my-2"
              placeholder="Enter amount to deposit"
              min="0.50"
              step="0.01"
              required
            />
            <small class="text-white">Payment Method</small>
            <select
              name="paymentMethod"
              id="paymentMethod"
              class="form-select my-2"
              required
            >
              <option value="fiat">Fiat (Bank Transfer, Card, PayPal)</option>
              <option value="crypto">Crypto (BTC, USDT, ETH)</option>
            </select>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button
              type="submit"
              class="btn btn-outline-dark bg-secondary rounded-pill mt-3"
            >
              Deposit
            </button>
          </form>
        </div>

        <!-- Withdrawal Request Section -->
        <div class="card bg-primary p-3 mt-3 mb-3 col-12 col-md-6 col-lg-6 dwc">
          <h4 class="text-white">Request Withdrawal</h4>

          <form action="/withdraw" method="POST">
            <input
              type="number"
              name="amount"
              class="form-control my-2"
              placeholder="Enter amount to withdraw"
              min="0.01"
              step="0.01"
              max="<%= user.investmentAmount.toFixed(2) %>"
              required
            />
            <small class="text-white"
              >Max Withdrawal: $<%= user.investmentAmount.toFixed(2) %></small
            >

            <!-- Select Withdrawal Type -->
            <select
              name="withdrawalType"
              id="withdrawalType"
              class="form-select my-2"
              required
            >
              <option value="" disabled selected>Select Withdrawal Type</option>
              <option value="crypto">Crypto Wallet</option>
              <option value="bank">Bank Transfer</option>
            </select>

            <!-- Crypto Wallet Selection -->
            <div id="cryptoSection" style="display: none">
              <select name="cryptoType" class="form-select my-2">
                <option value="" disabled selected>Select Wallet</option>
                <% for (const [crypto, address] of
                Object.entries(user.cryptoWallet)) { %> <% if (address) { %>
                <option value="<%= crypto %>">
                  <%= crypto %> - <%= address %>
                </option>
                <% } %> <% } %>
              </select>
            </div>

            <!-- Bank Transfer Section -->
            <div id="bankSection" style="display: none">
              <input
                type="text"
                name="bankName"
                class="form-control my-2"
                placeholder="Bank Name"
              />
              <input
                type="number"
                name="accountNumber"
                class="form-control my-2"
                placeholder="Account Number"
              />
              <input
                type="text"
                name="accountHolder"
                class="form-control my-2"
                placeholder="Account Holder Name"
              />
            </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="name" value="<%= user.fulname %>" />
            <input type="hidden" name="email" value="<%= user.email %>" />

            <button
              type="submit"
              class="btn btn-outline-light bg-primary rounded-pill mt-3"
            >
              Request Withdrawal
            </button>
          </form>
        </div>
      </div>

      <!-- Wallet Balance Section -->
      <div class="card bg-primary p-3 mt-3 mb-3">
        <h4 class="text-white">Wallet Balances</h4>
        <ul class="list-group">
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong>USDT<span> - <%= user.cryptoWallet.USDT %></span>:</strong>
            <span><%= user.balances.USDT %> USDT</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong>BTC<span> - <%= user.cryptoWallet.BTC %>:</span></strong>
            <span><%= user.balances.BTC %> BTC</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong>ETH<span> - <%= user.cryptoWallet.ETH %>:</span></strong>
            <span><%= user.balances.ETH %> ETH</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong>BNB <span>- <%= user.cryptoWallet.BNB %>:</span></strong>
            <span><%= user.balances.BNB %> BNB</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong>SOL <span>- <%= user.cryptoWallet.SOL %>:</span></strong>
            <span><%= user.balances.SOL %> SOL</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <strong
              >POLYGON <span>- <%= user.cryptoWallet.POLYGON %>:</span></strong
            >
            <span><%= user.balances.MATIC %> MATIC</span>
          </li>
        </ul>
      </div>

      <div class="row gap-3 mb-3 mt-3 mb-3">
        <div class="card bg-primary p-3 mt-3 col-12 col-md-6 col-lg-6 dwc">
          <h4 class="text-white">Swap Crypto</h4>
          <form action="/api/trade/swap" method="POST">
            <div class="row">
              <div class="col-6">
                <label class="text-white">From:</label>
                <select name="fromCrypto" class="form-select my-2">
                  <% for (const [crypto, balance] of
                  Object.entries(user.cryptoWallet)) { %>
                  <option value="<%= crypto %>"><%= crypto %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-6">
                <label class="text-white">To:</label>
                <select name="toCrypto" class="form-select my-2">
                  <% for (const crypto of ["BTC", "ETH", "USDT", "BNB", "SOL",
                  "MATIC"]) { %>
                  <option value="<%= crypto %>"><%= crypto %></option>
                  <% } %>
                </select>
              </div>
            </div>

            <input
              type="number"
              name="amount"
              class="form-control my-2"
              placeholder="Amount"
              step="0.0001"
              required
            />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button
              type="submit"
              class="btn btn-outline-light bg-primary mt-3 rounded-pill mt-3"
            >
              Swap
            </button>
          </form>
        </div>

        <div class="card bg-primary p-3 mt-3 col-12 col-md-6 col-lg-6 dwc">
          <h4 class="text-white">Sell Crypto</h4>
          <form action="/api/trade/sell" method="POST">
            <div class="row">
              <div class="col-6">
                <!-- <label class="text-white">Select Crypto:</label> -->
                <select name="cryptoType" class="form-select my-2">
                  <% for (const [crypto, balance] of
                  Object.entries(user.cryptoWallet)) { %>
                  <option value="<%= crypto %>"><%= crypto %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-6">
                <input
                  type="number"
                  name="amount"
                  class="form-control my-2"
                  placeholder="Amount to Sell"
                  step="0.0001"
                  required
                />
              </div>

              <div class="col-6">
                <input
                  type="text"
                  name="bankName"
                  class="form-control my-2"
                  placeholder="Bank Name"
                />
              </div>
              <div class="col-6">
                <input
                  type="number"
                  name="accountNumber"
                  class="form-control my-2"
                  placeholder="Account Number"
                />
              </div>
              <div class="col-12">
                <input
                  type="text"
                  name="accountHolder"
                  class="form-control my-2"
                  placeholder="Account Holder Name"
                />
              </div>
            </div>
            <!-- <label class="text-white">Withdrawal Type:</label>
            <select name="withdrawalType" class="form-select my-2">
              <option value="stripe">Stripe (Bank Transfer)</option>
            </select> -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button
              type="submit"
              class="btn btn-outline-light bg-primary rounded-pill mt-3"
            >
              Sell
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <%- include('includes/footer.ejs') %>
  <script>
    document
      .getElementById("withdrawalType")
      .addEventListener("change", function () {
        var cryptoSection = document.getElementById("cryptoSection");
        var bankSection = document.getElementById("bankSection");

        if (this.value === "crypto") {
          cryptoSection.style.display = "block";
          bankSection.style.display = "none";
        } else if (this.value === "bank") {
          cryptoSection.style.display = "none";
          bankSection.style.display = "block";
        } else {
          cryptoSection.style.display = "none";
          bankSection.style.display = "none";
        }
      });
  </script>
  <%- include('includes/end.ejs') %>
</body>
